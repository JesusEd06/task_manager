<h1>Crear una tarea nueva</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @task, local: true) do |f| %>
            <%= render 'shared/task_error_messages' %>
        
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :due_date %>
                <%= f.datetime_field :due_date, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :task_type %>
                <%= f.select :task_type, { "Personal" => "personal", "Grupal" => "grupal" }, { prompt: "Seleccionar tipo de tarea" }, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.submit "Crear", class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>